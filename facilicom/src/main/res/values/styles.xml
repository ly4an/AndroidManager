	<style name="WhiteText12sp" parent="@style/BaseText12sp">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="WhiteText14sp" parent="@style/BaseText14sp">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="WhiteText16sp" parent="@style/BaseText16sp">
