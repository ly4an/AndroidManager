	</style>

	<!-- Controls -->
	<style name="OrangeWhiteBoldText18spBtn" parent="@style/WhiteText18sp">
		<item name="android:background">@drawable/orange_selector</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="OrangeWhiteBoldText24spBtn" parent="@style/WhiteText24sp">
		<item name="android:background">@drawable/orange_selector</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="CheckDialogStyle" parent="@android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:background">@null</item>
	</style>

	<style name="ImageDialogStyle" parent="@android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:background">@null</item>
	</style>
	<!--

	Max

	-->
