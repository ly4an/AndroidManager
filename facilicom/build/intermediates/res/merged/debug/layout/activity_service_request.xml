<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	style="?attr/appBackground"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="ru.facilicom24.manager.activities.ServiceRequestActivity">

	<fragment
		android:id="@+id/captionFragment"
		android:name="ru.facilicom24.manager.fragments.CaptionFragment"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		tools:layout="@layout/fragment_caption"/>

	<TextView
		android:id="@+id/captionTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/captionFragment"
		android:layout_centerHorizontal="true"
		android:layout_margin="5dp"
		android:text="@string/request_menu_activity_6"
		android:textColor="@android:color/black"
		android:textSize="18sp"/>

	<ListView
		android:id="@+id/formListView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/captionTextView"
		android:layout_margin="5dp"
		android:divider="@android:color/transparent"
		android:dividerHeight="1dp"/>

</RelativeLayout>
